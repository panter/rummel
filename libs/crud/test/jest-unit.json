{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testPathIgnorePatterns": [
    "/node_modules/",
    "dist"
  ],
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "collectCoverage": true,
  "coverageDirectory": "coverage-unit",
  "testEnvironment": "node"
}
