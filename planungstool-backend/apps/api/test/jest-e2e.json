{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@veloclick/core(|/.*)$": "<rootDir>../../../libs/core/src/$1",
    "^@veloclick/crud(|/.*)$": "<rootDir>../../../libs/crud/src/$1",
    "^@veloclick/common(|/.*)$": "<rootDir>../../../libs/common/src/$1"
  }
}
