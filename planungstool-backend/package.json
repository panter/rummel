{
  "name": "@zku/planungstool-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "clean": "rimraf dist",
    "build": "nest build api",
    "dev": "nest start api --watch",
    "debug": "nest start api --debug --watch",
    "start": "node dist/main",
    "lint": "eslint \"{apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{apps,libs,test}/**/*.ts\" --fix",
    "lint:type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:api:e2e": "jest --config ./apps/api/test/jest-e2e.json",
    "test:admin:e2e": "jest --config ./apps/admin/test/jest-e2e.json",
    "test all": "yarn run test && yarn run test:api:e2e && yarn run test:admin:e2e",
    "migration:create": "yarn run mikro-orm migration:create",
    "migration:up": "yarn run mikro-orm migration:up",
    "migration:down": "yarn run mikro-orm migration:down",
    "migration:fresh": "yarn run mikro-orm migration:fresh --seed",
    "db:seed": "yarn mikro-orm seeder:run --class=AppInitSeeder",
    "job:database": "yarn run migration:up && yarn run mikro-orm seeder:run --class=CISeeder"
  },
  "dependencies": {
    "@apollo/server": "^4.9.1",
    "@mikro-orm/cli": "5.7.14",
    "@mikro-orm/core": "5.7.14",
    "@mikro-orm/nestjs": "5.2.0",
    "@mikro-orm/postgresql": "5.7.14",
    "@mikro-orm/reflection": "5.7.14",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@nestjs/apollo": "^12.0.7",
    "@nestjs/common": "^10.1.3",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.1.3",
    "@nestjs/event-emitter": "^2.0.0",
    "@nestjs/graphql": "^12.0.8",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.1.3",
    "@nestjs/schedule": "^3.0.2",
    "@panter/nestjs-utils": "*",
    "adm-zip": "^0.5.10",
    "archiver": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "dayjs": "^1.11.9",
    "fs-extra": "^11.1.1",
    "graphql": "16.7.1",
    "graphql-scalars": "^1.22.2",
    "lodash": "^4.17.21",
    "pino": "^8.15.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@mikro-orm/migrations": "5.7.14",
    "@mikro-orm/seeder": "5.7.14",
    "@nestjs/cli": "^10.1.11",
    "@nestjs/config": "^3.0.0",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.1.3",
    "@types/adm-zip": "^0.5.0",
    "@types/archiver": "^5.3.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "29.5.3",
    "@types/lodash": "^4.14.196",
    "@types/node": "^20.4.8",
    "@types/passport-jwt": "^3.0.9",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "eslint-config-custom": "*",
    "jest": "29.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig": "*",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ]
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./mikro-orm.config.ts"
    ]
  }
}
