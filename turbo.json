{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "dist/**",
        "build/**"
      ]
    },
    "test": {
      "dependsOn": [
        "build",
        "test:unit",
        "test:e2e",
        "test:integration"
      ]
    },
    "test:unit": {
      "dependsOn": [
        "build"
      ]
    },
    "test:e2e": {
      "dependsOn": [
        "build"
      ]
    },
    "test:integration": {
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "cache": false,
      "dependsOn": [
        "lint:type-check"
      ]
    },
    "lint:type-check": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
